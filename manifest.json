{
  "name": "HTML内容转Markdown",
  "description": "a chrome extension for convert HTML into Markdown",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Markdown Clipboard",
    "default_icon": {
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ]
}